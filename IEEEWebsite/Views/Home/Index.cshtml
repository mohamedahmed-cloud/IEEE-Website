     /*Button Sytle*/
   .button {
      height: 50px;
      width: 130px;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      position: relative;
      overflow: hidden;
      transition: all 0.5s ease-in-out;
    }

    .button:hover {
      box-shadow: .5px .5px 130px #252525;
    }

    .type1::after {
      content: "Facebook";
      height: 50px;
      width: 130px;
      background-color: #006699;
      color: #fff;
      position: absolute;
      top: 0%;
      left: 0%;
      transform: translateY(50px);
      font-size: 1.2rem;
      font-weight: 600;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.5s ease-in-out;
    }
    .type2::after {
        content: "Linked In";
    }
    .type1::before {
      content: "Go To";
      height: 50px;
      width: 130px;
      background-color: #fff;
      color: #006699;
      position: absolute;
      top: 0%;
      left: 0%;
      transform: translateY(0px) scale(1.2);
      font-size: 1.2rem;
      font-weight: 600;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.5s ease-in-out;
    }

    .type1:hover::after {
      transform: translateY(0) scale(1.2);
    }

    .type1:hover::before {
      transform: translateY(-50px) scale(0) rotate(120deg);
    }



   

    

