

<div>
    <table class="table table-dark table-striped container mt-5">
        <div class="add-user">
            <a asp-action="AddNewUser" asp-controller="Manage">Add New User</a>
        </div>
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email</th>
          <th scope="col">Password</th>
          <th scope="col">Role</th>
          <th scope="col">Category</th>
          <th scope="col">TotalScore</th>
          <th scope="col">Edit</th>
          <th scope="col">Update</th>

        </tr>
      </thead>
      <tbody>
            @{
                var cnt = 1;
                foreach(var item in Model)
                {      
                    <tr>
                      <th scope="row">@cnt</th>
                      <td>@item.FName</td>
                      <td>@item.LName</td>
                      <td>@item.Email</td>
                      <td>@item.Password</td>
                      <td>@item.Role</td>
                      <td>@item.CategoryName</td>
                      <td>@item.TotalScore</td>
                      <td >
                           <a asp-action="UpdateUser" asp-controller="Manage" asp-route-id="@item.Id"
                            class="text-success">
                                 <i class="fa-solid fa-pen-to-square"></i>
                           </a>
                      </td>
                      <td class="text-center">
                        <a asp-action="DeleteUser" asp-controller="Manage" asp-route-id="@item.Id"
                         class="text-danger">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                      
                      </td>
                    </tr>
                    cnt++;
                }
            }
      
      </tbody>
    </table>
</div>


<style>
    td, tr
    {
        text-align:center;
    }
     .add-user
    {
        background-color:#2c3034;
        width:fit-content;
        margin-left:auto;
        margin-right:auto;
        margin-top:40px;
        border-radius:10px;
        padding:20px;
        font-weight:500;
    }
    .add-user a
    {
        color:#fff;
        text-decoration:none;
    }
    .add-user:hover
    {
        background-color:#212529;
    }
    .add-user a:hover
    {
        color:#357ae8;
        font-weight:700;
    }

</style>