
@{
    ViewData["Title"] = "Category";
}


	
<div>
    <table class="table table-dark table-striped container mt-5 w-75">
        <div class="add-category">
	        <a asp-action="AddCategory" asp-controller="Manage">Add Category</a>
        </div>
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Category Name</th>
          <th scope="col">Update Category</th>
          <th scope="col">Delete Category</th>
        </tr>
      </thead>
      <tbody>
            @{
                var cnt = 0;
                foreach(var item in Model)
                {      
                    <tr >
                      <th >@cnt</th>
                      <td >@item.Name</td>
                      <td >
                           <a asp-action="UpdateCategory" asp-controller="Manage" asp-route-id="@item.Id"
                            class="text-success">
                                 <i class="fa-solid fa-pen-to-square"></i>
                           </a>
                      </td>
                      <td class="text-center">
                        <a asp-action="DeleteCategory" asp-controller="Manage" asp-route-id="@item.Id"
                         class="text-danger">
                            
                            <i class="fa-solid fa-trash"></i>
                        </a>
                      
                      </td>
                    </tr>
                    cnt++;
                }
            }
      
      </tbody>
    </table>
</div>

<style>
    td svg{
        cursor:pointer;
    }
    td, tr
    {
        text-align:center;
    }
    .add-category
    {
        background-color:#2c3034;
        width:fit-content;
        margin-left:auto;
        margin-right:auto;
        margin-top:40px;
        border-radius:10px;
        padding:20px;
        font-weight:500;
    }
    .add-category a
    {
        color:#fff;
        text-decoration:none;
    }
    .add-category:hover
    {
        background-color:#212529;
    }
    .add-category a:hover
    {
        color:#357ae8;
        font-weight:700;
    }

</style>