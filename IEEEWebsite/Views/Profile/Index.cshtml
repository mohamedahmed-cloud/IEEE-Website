<div class="all-profile">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="profile-upper card-header d-flex justify-content-between align-items-center">
                        <h2>User Profile</h2>
                         <div title="Edit profile">
                             <a asp-action="EditProfile" asp-controller="Profile" asp-route-id="@Model?.Id">
                                <i class="fa-solid fa-pen-to-square text-success" ></i>
                             </a>
                         </div>
                       
                        
                    </div>

                    <div class="card-body">
                        <div class="form-group">
                            <label for="firstName">First Name:</label>
                            <input type="text" id="firstName" class="form-control" asp-for="FName" readonly>
                        </div>

                        <div class="form-group">
                            <label for="lastName">Last Name:</label>
                            <input type="text" id="lastName" class="form-control" asp-for="LName"  readonly>
                        </div>

                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" id="email" class="form-control" asp-for="Email" readonly>
                        </div>

                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="text" id="password" class="form-control" asp-for="Password"

                      readonly>
                        </div>

                        <div class="form-group">
                            <label for="totalScore">Total Score:</label>
                            <input type="text" id="totalScore" class="form-control" asp-for="TotalScore" readonly>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



